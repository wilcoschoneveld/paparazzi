<!DOCTYPE flight_plan SYSTEM "../flight_plan.dtd">

<!-- Flight Plan centered in the Cyber Zoo -->
<flight_plan
        name="Flight Plan Group 05"
        lat0="51.990634" lon0="4.376789"
        ground_alt="0"
        security_height="0.4"
        max_dist_from_home="8"
        alt="1.5">

  <!-- Include headers to allow calling of functions that are not part of a module -->
  <header>
    #include "autopilot.h"
    #include "subsystems/ahrs.h"
    #include "subsystems/electrical.h"
    #include "subsystems/datalink/datalink.h"
  </header>

  <!-- Waypoints used in this flight plan -->
  <waypoints>
    <!-- Mission waypoints -->
    <waypoint name="HOME" x="0.0" y="0.0"/>
    <waypoint name="CLIMB" x="1.2" y="-0.6"/>
    <waypoint name="GOAL" x="2.0" y="2.0"/>
    <waypoint name="STDBY" x="-0.7" y="-0.8"/>
    <waypoint name="TD" x="0.8" y="-1.7"/>

    <!-- Corners of the Cyber Zoo -->
    <waypoint lat="51.9906213" lon="4.3768628" name="_CZ1"/>
    <waypoint lat="51.9905874" lon="4.3767766" name="_CZ2"/>
    <waypoint lat="51.9906409" lon="4.3767226" name="_CZ3"/>
    <waypoint lat="51.990667" lon="4.376806" name="_CZ4"/>

    <!-- Corners of the obstacle zone -->
    <waypoint lat="51.990624" lon="4.376845" name="_OZ1"/>
    <waypoint lat="51.990601" lon="4.376782" name="_OZ2"/>
    <waypoint lat="51.990638" lon="4.376748" name="_OZ3"/>
    <waypoint lat="51.990657" lon="4.376804" name="_OZ4"/>
  </waypoints>

  <!-- Sectors used in this flight plan -->
  <sectors>
    <sector color="red" name="CyberZoo">
      <corner name="_CZ1"/>
      <corner name="_CZ2"/>
      <corner name="_CZ3"/>
      <corner name="_CZ4"/>
    </sector>
    <sector color="blue" name="ObstacleZone">
      <corner name="_OZ1"/>
      <corner name="_OZ2"/>
      <corner name="_OZ3"/>
      <corner name="_OZ4"/>
    </sector>
  </sectors>

  <!-- Global exceptions -->
  <exceptions>
    <exception cond="!InsideCyberZoo(GetPosX(), GetPosY())" deroute="Hover"/>
    <exception cond="datalink_time > 2" deroute="Standby"/>
    <exception cond="electrical.bat_low && !(nav_block == IndexOfBlock('Land')) && !(nav_block == IndexOfBlock('Flare')) && !(nav_block == IndexOfBlock('Landed'))" deroute="Land"/>
    <exception cond="electrical.bat_critical && !(nav_block == IndexOfBlock('Land')) && !(nav_block == IndexOfBlock('Flare')) && !(nav_block == IndexOfBlock('Landed'))" deroute="Land here"/>
  </exceptions>

  <!-- Blocks describing the units of the mission -->
  <blocks>
    <!-- Kill the throttle and wait for GPS fix -->
    <block name="Wait GPS">
      <call fun="NavKillThrottle()"/>
      <while cond="!GpsFixValid()"/>
    </block>

    <!-- Wait 5 seconds and then set altitude reference -->
    <block name="Geo init">
      <while cond="LessThan(NavBlockTime(), 5)"/>
      <call fun="NavSetAltitudeReferenceHere()"/>
    </block>

    <!-- Kill the throttle and wait -->
    <block name="Holding point">
      <call fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" vmode="throttle"/>
    </block>

    <!-- Start the engine and wait -->
    <block key="s" name="Start Engine" strip_button="Start" strip_icon="flat_theme/start_motors.png">
      <call fun="NavResurrect()"/>
      <attitude pitch="0" roll="0" throttle="0" vmode="throttle"/>
    </block>

    <!-- Take off -->
    <block key="t" name="Takeoff" strip_button="Takeoff" strip_icon="takeoff.png">
      <exception cond="stateGetPositionEnu_f()->z > 1.25" deroute="Standby"/>
      <call fun="NavSetWaypointHere(WP_CLIMB)"/>
      <stay climb="nav_climb_vspeed" vmode="climb" wp="CLIMB"/>
    </block>

    <!-- Set waypoint STDBY here and stay there -->
    <block key="s" name="Standby" strip_button="Standby" strip_icon="home.png">
      <call fun="NavSetWaypointHere(WP_STDBY)"/>
      <stay wp="STDBY"/>
    </block>

    <block key="g" name="START" strip_button="Go" strip_icon="lookfore.png">
      <call fun="NavSetWaypointHere(WP_GOAL)"/>
    </block>

    <block name="StayGoal">
      <stay wp="GOAL"/>
      <exception cond="block_time > 3" deroute="MoveGoalForward"/>
    </block>

    <!-- ////////////////////////////////////////////////////////////////////////////////////////////////////////// -->

    <block name="MoveGoalForward">
      <call fun="moveWaypointForwards(WP_GOAL,1)"/>
      <deroute block="GoGoal"/>
      <exception cond="!InsideObstacleZone(WaypointX(WP_GOAL),WaypointY(WP_GOAL))" deroute="ChangeHeading_CZ"/>
    </block>

    <block name="GoGoal">
      <stay wp="GOAL"/>
      <attitude pitch="-1" roll="0" alt="1.5"/>
      <exception cond="Object" deroute="ChangeHeading"/>
      <exception cond="Featureless" deroute="ChangeHeading"/>
      <exception cond="block_time>2" deroute="MoveGoalForward"/>
    </block>

    <block name="ChangeHeading_CZ">
      <call fun="NavSetWaypointHere(WP_STDBY)"/>
      <while cond="1">
        <call fun="increase_nav_heading(&nav_heading,incrementForAvoidance)"/>
        <call fun="moveWaypointForwards(WP_GOAL,0.5)"/>
        <go wp="STDBY"/>
      </while>
      <exception cond="InsideObstacleZone(GetPosX(),GetPosY())" deroute="Reinitialize_Divergence"/>
    </block>


    <block name="ChangeHeading">
      <call fun="NavSetWaypointHere(WP_STDBY)"/>
      <while cond="1">
        <call fun="increase_nav_heading(&nav_heading,120)"/>
        <call fun="moveWaypointForwards(WP_GOAL,0.5)"/>
        <go wp="STDBY"/>
      </while>
      <exception cond="block_time>5" deroute="Reinitialize_Divergence"/>
    </block>

    <block name="Reinitialize_Divergence">
      <stay wp="GOAL"/>
      <exception cond="block_time>2" deroute="GoGoal"/>
    </block>

    <!-- ////////////////////////////////////////////////////////////////////////////////////////////////////////// -->

    <!-- Hover at the current location -->
    <block key="h" name="Hover" strip_button="Hover" strip_icon="flat_theme/takeoff.png">
      <call fun="NavSetWaypointHere(WP_STDBY)"/>
      <stay wp="STDBY"/>
    </block>

    <!-- Set the waypoint TD here -->
    <block key="l" name="Land here" strip_button="Land Here" strip_icon="land-right.png">
      <call fun="NavSetWaypointHere(WP_TD)"/>
    </block>

    <!-- Go to waypoint TD -->
    <block name="Land">
      <go wp="TD"/>
    </block>

    <!-- Reduce altitude until touchdown -->
    <block name="Flare">
      <exception cond="NavDetectGround()" deroute="Holding point"/>
      <exception cond="!nav_is_in_flight()" deroute="Landed"/>
      <call fun="NavStartDetectGround()"/>
      <stay climb="nav_descend_vspeed" vmode="climb" wp="TD"/>
    </block>

    <!-- Kill throtle -->
    <block name="Landed">
      <call fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
  </blocks>

  <!-- End of flight plan -->
</flight_plan>
