<!DOCTYPE flight_plan SYSTEM "../flight_plan.dtd">

<!-- Flight Plan centered in the Cyber Zoo -->
<flight_plan
        name="Flight Plan Group 05"
        lat0="51.990634" lon0="4.376789"
        ground_alt="0"
        security_height="0.4"
        max_dist_from_home="8"
        alt="1.5">

  <!-- Include headers to allow calling of functions that are not part of a module -->
  <header>
    #include "autopilot.h"
    #include "subsystems/ahrs.h"
    #include "subsystems/electrical.h"
    #include "subsystems/datalink/datalink.h"
  </header>

  <!-- Waypoints used in this flight plan -->
  <waypoints>
    <!-- Mission waypoints -->
    <waypoint name="HOME" x="0.0" y="0.0"/>
    <waypoint name="STDBY" x="-0.7" y="-0.8"/>
    <waypoint name="GOAL" x="2.0" y="2.0"/>

    <!-- Corners of the obstacle zone -->
    <waypoint lat="51.9905922" lon="4.3767779" name="_OZ1"/>
    <waypoint lat="51.9906428" lon="4.3767195" name="_OZ2"/>
    <waypoint lat="51.9906780" lon="4.3768044" name="_OZ3"/>
    <waypoint lat="51.9906271" lon="4.3768621" name="_OZ4"/>
  </waypoints>

  <!-- Sectors used in this flight plan -->
  <sectors>
    <sector color="blue" name="ObstacleZone">
      <corner name="_OZ1"/>
      <corner name="_OZ2"/>
      <corner name="_OZ3"/>
      <corner name="_OZ4"/>
    </sector>
  </sectors>

  <!-- Global exceptions -->
  <exceptions>
    <!--<exception cond="datalink_time > 2" deroute="Standby"/>-->
    <!--<exception cond="electrical.bat_low && !(nav_block == IndexOfBlock('Land')) && !(nav_block == IndexOfBlock('Flare')) && !(nav_block == IndexOfBlock('Landed'))" deroute="Land"/>-->
    <!--<exception cond="electrical.bat_critical && !(nav_block == IndexOfBlock('Land')) && !(nav_block == IndexOfBlock('Flare')) && !(nav_block == IndexOfBlock('Landed'))" deroute="Land here"/>-->
  </exceptions>

  <!-- Blocks describing the units of the mission -->
  <blocks>
    <!-- Kill the throttle and wait for GPS fix -->
    <block name="Wait GPS">
      <call fun="NavKillThrottle()"/>
      <while cond="!GpsFixValid()"/>
    </block>

    <!-- Wait 5 seconds and then set altitude reference -->
    <block name="Geo init">
      <while cond="LessThan(NavBlockTime(), 5)"/>
      <call fun="NavSetAltitudeReferenceHere()"/>
    </block>

    <!-- Kill the throttle and wait -->
    <block key="k" name="Hold" strip_button="Kill" strip_icon="flat_theme/kill.png">
      <call fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" vmode="throttle"/>
    </block>

    <!-- Start the engine and wait -->
    <block key="s" name="Start Engine" strip_button="Start" strip_icon="flat_theme/start_motors.png">
      <call fun="NavResurrect()"/>
      <attitude pitch="0" roll="0" throttle="0" vmode="throttle"/>
    </block>

    <!-- Hover at the current location -->
    <block key="h" name="Hover" strip_button="Hover" strip_icon="flat_theme/pano_hov.png">
      <call fun="NavSetWaypointHere(WP_STDBY)"/>
      <stay wp="STDBY"/>
    </block>

    <!-- ################################### -->
    <!-- ### OBSTACLE AVOIDANCE STRATEGY ### -->
    <!-- ################################### -->

    <block name="MoveGoalForward">
      <call fun="moveWaypointForwards(WP_GOAL, 1.25)"/>
      <deroute block="GoGoal"/>
    </block>

    <block name="GoGoal">
      <exception cond="!InsideObstacleZone(WaypointX(WP_GOAL),WaypointY(WP_GOAL))" deroute="OutsideGoal"/>
      <exception cond="FEATURELESS > 0" deroute="Featureless"/>
      <!--<exception cond="FRONTAL_OBSTACLE > 0" deroute="AngleGoal"/>-->
      <!--<exception cond="SIDE_OBSTACLE > 0" deroute="AngleGoal"/>-->
      <go wp="GOAL"/>
      <deroute block="MoveGoalForward"/>
    </block>

    <block name="Featureless">
      <call fun="changeHeading_Featureless()"/>
      <deroute block="AngleGoal"/>
    </block>

    <block name="OutsideGoal">
      <call fun="changeHeading_Outside()"/>
      <deroute block="AngleGoal"/>
    </block>

    <block name="AngleGoal">
      <call fun="moveWaypointAngle(WP_GOAL, 1.25)"/>
      <call fun="nav_set_heading_towards_waypoint(WP_GOAL)"/>
      <while cond="LessThan(NavBlockTime(), 3)"/>
      <deroute block="GoGoal"/>
    </block>

    <!-- ################################### -->

    <!-- Land at the current location -->
    <block key="l" name="Land" strip_button="Land" strip_icon="flat_theme/downdown.png">
      <exception cond="NavDetectGround()" deroute="Hold"/>
      <call fun="NavSetWaypointHere(WP_STDBY)"/>
      <call fun="NavStartDetectGround()"/>
      <stay wp="STDBY" vmode="climb" climb="nav_descend_vspeed"/>
    </block>

    <!-- End of blocks -->
  </blocks>

  <!-- End of flight plan -->
</flight_plan>
