<!DOCTYPE flight_plan SYSTEM "../flight_plan.dtd">

<!-- Flight Plan centered in the Cyber Zoo -->
<flight_plan
        name="Flight Plan Group 05"
        lat0="51.990634" lon0="4.376789"
        ground_alt="0"
        security_height="0.4"
        max_dist_from_home="8"
        alt="1.5">

  <!-- Include headers to allow calling of functions that are not part of a module -->
  <header>
    #include "autopilot.h"
    #include "subsystems/ahrs.h"
    #include "subsystems/electrical.h"
    #include "subsystems/datalink/datalink.h"
  </header>

  <!-- Waypoints used in this flight plan -->
  <waypoints>
    <!-- Mission waypoints -->
    <waypoint name="HOME" x="0.0" y="0.0"/>
    <waypoint name="CLIMB" x="1.2" y="-0.6"/>
    <waypoint name="GOAL" x="2.0" y="2.0"/>
    <waypoint name="STDBY" x="-0.7" y="-0.8"/>
    <waypoint name="TD" x="0.8" y="-1.7"/>

    <!-- Corners of the Cyber Zoo -->
    <waypoint lat="51.9906213" lon="4.3768628" name="_CZ1"/>
    <waypoint lat="51.9905874" lon="4.3767766" name="_CZ2"/>
    <waypoint lat="51.9906409" lon="4.3767226" name="_CZ3"/>
    <waypoint lat="51.990667" lon="4.376806" name="_CZ4"/>

    <!-- Corners of the obstacle zone -->
    <waypoint lat="51.990624" lon="4.376845" name="_OZ1"/>
    <waypoint lat="51.990601" lon="4.376782" name="_OZ2"/>
    <waypoint lat="51.990638" lon="4.376748" name="_OZ3"/>
    <waypoint lat="51.990657" lon="4.376804" name="_OZ4"/>
  </waypoints>

  <!-- Sectors used in this flight plan -->
  <sectors>
    <sector color="red" name="CyberZoo">
      <corner name="_CZ1"/>
      <corner name="_CZ2"/>
      <corner name="_CZ3"/>
      <corner name="_CZ4"/>
    </sector>
    <sector color="blue" name="ObstacleZone">
      <corner name="_OZ1"/>
      <corner name="_OZ2"/>
      <corner name="_OZ3"/>
      <corner name="_OZ4"/>
    </sector>
  </sectors>

  <!-- Global exceptions -->
  <exceptions>
    <exception cond="!InsideCyberZoo(GetPosX(), GetPosY())" deroute="Hover"/>
    <!--<exception cond="datalink_time > 2" deroute="Standby"/>-->
    <!--<exception cond="electrical.bat_low && !(nav_block == IndexOfBlock('Land')) && !(nav_block == IndexOfBlock('Flare')) && !(nav_block == IndexOfBlock('Landed'))" deroute="Land"/>-->
    <!--<exception cond="electrical.bat_critical && !(nav_block == IndexOfBlock('Land')) && !(nav_block == IndexOfBlock('Flare')) && !(nav_block == IndexOfBlock('Landed'))" deroute="Land here"/>-->
  </exceptions>

  <!-- Blocks describing the units of the mission -->
  <blocks>
    <!-- Kill the throttle and wait for GPS fix -->
    <block name="Wait GPS">
      <call fun="NavKillThrottle()"/>
      <while cond="!GpsFixValid()"/>
    </block>

    <!-- Wait 5 seconds and then set altitude reference -->
    <block name="Geo init">
      <while cond="LessThan(NavBlockTime(), 5)"/>
      <call fun="NavSetAltitudeReferenceHere()"/>
    </block>

    <!-- Kill the throttle and wait -->
    <block name="Holding point">
      <call fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" vmode="throttle"/>
    </block>

    <!-- Start the engine and wait -->
    <block key="s" name="Start Engine" strip_button="Start" strip_icon="flat_theme/start_motors.png">
      <call fun="NavResurrect()"/>
      <attitude pitch="0" roll="0" throttle="0" vmode="throttle"/>
    </block>

    <!-- Hover at the current location -->
    <block key="h" name="Hover" strip_button="Hover" strip_icon="flat_theme/takeoff.png">
      <call fun="NavSetWaypointHere(WP_STDBY)"/>
      <stay wp="STDBY"/>
    </block>

    <block name="B">
      <call fun="nav_set_heading_towards_waypoint(WP_GOAL)"/>
      <go wp="GOAL"/>
    </block>

    <block name="A">
      <stay wp="STDBY"/>
    </block>

    <!-- Move forwards -->
    <block name="Go" strip_button="Go" strip_icon="flat_theme/right.png">
      <exception cond="!InsideObstacleZone(GetPosX(),GetPosY())" deroute="Return"/>
      <call fun="NavSetWaypointHere(WP_GOAL)"/>
      <while cond="TRUE">
        <call fun="moveWaypointForwards(WP_GOAL, 1.0)"/>
        <go wp="GOAL"/>
      </while>
    </block>

    <block name="Return">
      <call fun="nav_set_heading_towards_waypoint(WP_HOME)"/>
      <stay wp="HOME"/>
    </block>

